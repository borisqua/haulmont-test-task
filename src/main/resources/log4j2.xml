<?xml version="1.0" encoding="UTF-8"?>
<!--<Configuration status="ALL">-->
<Configuration>
  
  <Properties>
    <Property name="basePath">logs</Property>
  </Properties>
  
  <Appenders>
    
    <RollingFile name="fileLogger" fileName="${basePath}/app.log"
                 filePattern="${basePath}/app-info-%d{yyyy-MM-dd}.log">
      
      <PatternLayout>
        <Pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</Pattern>
      </PatternLayout>
      
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    
    </RollingFile>
    
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %C{1}.%M(%F:%L) - %msg%n"/>
    </Console>
  
  </Appenders>
  
  <Loggers>
    
    <Logger name="com.haulmont.testtask" level="trace" additivity="true">
      <AppenderRef ref="fileLogger"/>
    </Logger>
    
    <Root level="trace" additivity="false">
      <AppenderRef ref="Console"/>
    </Root>
  
  </Loggers>

</Configuration>
